        function applyCostAndPriceToLines(){
            var selectedAsseType = $j("select[id$='assetTypeToReplace']").val();
            var selectedUnitCost = $j(".unitCostReplacement").val();
            var selectedUnitPrice = $j(".unitPriceReplacement").val();
            if ( !$j.isNumeric(selectedUnitCost) ){
                alert('Cost has to be numeric.')
