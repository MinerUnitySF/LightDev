                        $j(this).find("span[id$='totalPrice']").text('$' + parseFloat(selectedUnitPrice, 10).toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, "$1,").toString());
                        modifiedLineIndexes.push(lineIndex);
                    }
                }
            );
            if (modifiedLineIndexes.length > 0){
