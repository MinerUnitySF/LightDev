            }
            if ( !$j.isNumeric(selectedUnitPrice) ){
                alert('Price has to be numeric.')
                return;
            }
            var modifiedLineIndexes = [];
            $j('.fields-table').each(
                function(){
                    var unitCost = $j(this ).find('.cell-wrapper-unitCost').val();
