<aura:component implements="forceCommunity:layout" access="global" description="Custom 2 column layout">
	<aura:attribute name="column1" type="Aura.Component[]" required="false"></aura:attribute>
    <aura:attribute name="column2" type="Aura.Component[]" required="false"></aura:attribute>
    <aura:attribute name="column3" type="Aura.Component[]" required="false"/>
    <aura:attribute name="sidebarFooter" type="Aura.Component[]"/>

    <div class="container">
        {!v.column3}
        <div class="contentPanel">
            <div class="left">
                {!v.column1}
            </div>
            <div class="right">
                {!v.column2}
            </div>
        </div>
    </div>
</aura:component>